<% if line_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr>
<% end %>
  <td> <%= line_item.quantity %> &times; </td>
  <td> <%= line_item.product.title %> </td>
  <td class="item_price"> <%= number_to_currency(line_item.price) %></td>
  <td> <%= button_to 'Remove item', line_item, class: 'delete', method: :delete, data: { confirm: 'Are You sure?' } %></td>
</tr>
